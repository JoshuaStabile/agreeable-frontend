{
  "manifest_version": 3,
  "name": "Agreeable: AI Document Summarizer",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "./scripts/loadResponse.js", "./scripts/getDocumentText.js", "./scripts/shouldRun.js", "./scripts/content.js", "./scripts/freeSelect.js",

        "./libs/Readability.js", "./libs/mark.min.js", "./libs/popper.min.js", "./libs/tippy-bundle.umd.min.js"
      ],
      "run_at": "document_idle",
      "css": ["./styles/styles.css"]
    }
  ],
  "action": {
    "default_popup": "./popup/popup.html",
    "default_title": "Agreeable"
  }
}
